# NextBrain Application Environment Variables
# Copy this file to .env and update the values

# Environment Configuration
NODE_ENV=development

# Docker Configuration
# For development: DOCKERFILE=Dockerfile.dev
# For production: DOCKERFILE=Dockerfile
DOCKERFILE=Dockerfile.dev

# Network Configuration - IMPORTANT: Set this based on your deployment
# For local development: HOST_IP=localhost
# For VM deployment: HOST_IP=your_server_ip
HOST_IP=localhost

# Database Configuration
POSTGRES_USER=nextbrain
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=nextbrain

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_in_production

# Email Configuration (for notifications and invitations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
MAIL_FROM_NAME=NextBrain

# AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
VITE_GEMINI_API_KEY=your_gemini_api_key_here
LLAMA_API_URL=http://host.docker.internal:11434/api/chat

# Optional: Redis Configuration
REDIS_URL=redis://redis:6379
