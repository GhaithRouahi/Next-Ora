# Set this if you want to use OpenAI for generation
# OPENAI_API_KEY=sk-...

# Where Chroma stores its DB
CHROMA_DB_DIR=./chroma_db

# Upload folder
UPLOAD_DIR=./uploads

# SQLite DB file
DATABASE_URL=sqlite:///./rag.db

# Sentence transformer model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Vector DB selection: chroma or qdrant
VECTOR_DB=chroma
# For qdrant, set the URL (matches docker-compose service name)
VECTOR_DB_URL=http://qdrant:6333
